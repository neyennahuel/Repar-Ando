{
  "name": "repar-ando",
  "version": "1.0.0",
  "description": "Gestion de mantenimiento local",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "set NODE_ENV=development && electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --win --x64"
  },
  "dependencies": {
    "electron-updater": "^6.1.8"
  },
  "devDependencies": {
    "electron": "^35.7.5",
    "electron-builder": "^24.13.3",
    "electron-reload": "^1.5.0"
  },
  "build": {
    "appId": "com.whittall.reparando",
    "productName": "Repar-Ando",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**",
      "!node_modules/.cache/**"
    ],
    "win": {
      "icon": "assets/icono.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Repar-Ando"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "neyennahuel",
        "repo": "Repar-Ando"
      }
    ]
  }
}
